<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beauty_nature"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/logo3"
        tools:layout_editor_absoluteX="-74dp"
        tools:layout_editor_absoluteY="12dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        />
    <EditText
        android:id="@+id/Citynametext"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignBottom="@+id/showbutton"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-1dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter City Name"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textColorHint="#d9d9d9"
        android:textSize="23dp"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="335dp" />
    <Button
        android:id="@+id/showbutton"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/custom_button"
        android:text="show"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="482dp" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="150dp"
        android:indeterminateDrawable="@drawable/custom_progress"
        android:indeterminateDuration="@android:integer/config_longAnimTime"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="900dp"
        android:layout_below="@+id/showbutton"
        />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Citynametext"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/gradientlist"

        />




</RelativeLayout>